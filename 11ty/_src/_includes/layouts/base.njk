<!DOCTYPE html>
<html lang="{{ site.meta.lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="{{ site.meta.description }}">
    <title>{% if title %}{{ title }} | {% endif %}{{ site.meta.title }}</title>

    <link rel="stylesheet" type="text/css" href="{{ '/static/carbon-components.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/static/main.css' | url }}" media="all" />
    <script type="module" src="{{ '/static/ui-shell.min.js' | url }}"></script>
    <script type="module" src="{{ '/static/link.min.js' | url }}"></script>
    <script type="module" src="{{ '/static/code-snippet.min.js' | url }}"></script>
    <script type="module" src="{{ '/static/accordion.min.js' | url }}"></script>
    <script type="module" src="{{ '/static/list.min.js' | url }}"></script>
    <script type="module" src="{{ '/static/tabs.min.js' | url }}"></script>
    <!-- mathjax -->
    <script id="MathJax-script" async src="{{ '/static/tex-chtml-full.js' | url }}"></script>
    <script>
        MathJax = {
            tex: {
                inlineMath: [['$', '$'], ['\\(', '\\)']]
            },
            svg: {
                fontCache: 'global'
            }
        };
    </script>

</head>
<body>
    {% include 'components/navbar.njk' %}
    <main class="bx--content bx--offset-lg-3">
            {{ content | safe }}
    </main>
    {% include 'components/footer.njk' %}
</body>
</html>